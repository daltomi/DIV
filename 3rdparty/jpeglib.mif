!ifndef ROOT
!error Se requiere la macro ROOT
!endif
!ifndef SEP
!error Se requiere la macro SEP
!endif

!ifndef INC_NOVARS

JPEG_LIB = $(ROOT)$(SEP)3rdparty$(SEP)lib$(SEP)libjpeg.lib
JPEG_DIR = $(ROOT)$(SEP)3rdparty$(SEP)jpeglib
INCLUDE += -I$(JPEG_DIR)
CLEAN_LIB3P_DEPS += clean_jpeg

!endif #INC_NOVARS

!ifndef INC_NOTARGETS

$(JPEG_LIB): lib3p_dir .EXISTSONLY
	cd $(JPEG_DIR)
	*$(MAKE) $^.
	$(COPY) $^. $^:
	cd $+$(%cwd)$-

clean_jpeg: .SYMBOLIC
	cd $(JPEG_DIR)
	*$(MAKE) clean
	cd $+$(%cwd)$-

!endif #INC_NOTARGETS
